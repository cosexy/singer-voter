    <div class="_banner">
        <img src="/images/vote.jpg"  alt=""/>
    </div>

    <style>
        ._banner {
            height: 300px;
            width: 100%;
            margin-top: 30px;
        }
        ._banner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>

    <!-- PRODUCT AREA START -->
    <div class="ltn__product-area ltn__product-gutter  pt-65 pb-40">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title-area text-center">
                        <h1 class="section-title section-title-border">
                            Bình Chọn Ngay
                        </h1>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">

                <!-- ltn__product-item -->
                <% actors.forEach(function(actor){ %>
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                            <div class="ltn__product-item text-center" data-actor="<%- actor.id %>">
                                <div class="product-img">
                                    <a href="javascript:void(0)">
                                        <img src="<%- actor.avatar %>" alt="#">
                                    </a>
                                    <div class="product-hover-action product-hover-action-2">
                                        <ul>
                                            <li class="add-to-cart">
                                                <a href="javascript:void(0)" class="_vote_btn cart-text d-none d-xl-block" title="Vote" data-vote="<%- actor.id %>">
                                                    Bình Chọn Ngay
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <h2 class="product-title">
                                        <a href="javascript:void(0)" class="_vote_btn" data-vote="<%- actor.id %>">
                                            <%- actor.name %>
                                        </a>
                                    </h2>
                                    <div class="product-price" style="color: #e91e63;">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="m12 21.35l-1.45-1.32C5.4 15.36 2 12.27 2 8.5C2 5.41 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.08C13.09 3.81 14.76 3 16.5 3C19.58 3 22 5.41 22 8.5c0 3.77-3.4 6.86-8.55 11.53L12 21.35Z"/></svg>

                                        <span class="likes">
                                            <%- actor.likes %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                <% }); %>
            </div>
        </div>
    </div>
    <!-- PRODUCT SLIDER AREA END -->

    <!-- FOOTER AREA START -->
    <!-- FOOTER AREA END -->

    <script>
        const actorsData = <%- JSON.stringify(actors) %>
    </script>

    <style>

        .custom-modal.is-active {
            opacity: 1;
            visibility: visible;
        }

        .custom-modal {
            position: fixed;
            display: flex;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            z-index: 1000;
            background: #0000004f;
            justify-content: center;
            align-items: center;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease-in-out;
        }

        .custom-modal-content {
            background: white;
            width: 290px;
            padding: 16px;
            position: relative;
            z-index: 21;
            border-radius: 15px;
        }

        .close-custom-modal {
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            z-index: 10;
        }

        .custom-modal-content .title h4 {
            font-weight: 600;
        }

        .custom-modal-content .title {
            display: flex;
            justify-content: space-between;
        }

        .content-vote label {
            font-size: 14px;
            font-weight: 600;
        }

        #vote-num {
            border: unset;
            background: #00000014;
            color: #e91e63;
            padding: 4px 13px;
            width: 100%;
            border-radius: 8px;
            font-size: 18px;
        }

        .vote-footer {
            margin-top: 20px;
            display: flex;
            justify-content: space-evenly;
        }

        .vote-footer button {
            border-radius: 7px;
            padding: 5px 15px;
            background: #e91e632b;
            color: #e91e63;
            font-size: 14px;
            font-weight: 500;
        }

        .vote-footer .action-btn {
            background: #2196f342;
            color: #2196f3;
        }


        .rank-item {
            display: flex;
        }

        .rank-item .rank-img {
            width: 64px;
            overflow: hidden;
        }

        .rank-title {
            font-size: 15px;
            margin-bottom: 0;
        }

        .rank-item {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
        }

        .rank-info {
            margin-left: 10px;
        }

        #rank-modal .custom-modal-content .rank-content {
            height: 100%;
            max-height: 70vh;
            overflow: auto;
        }
    </style>

    <!-- Modal Vote -->
    <div id="vote-modal" class="custom-modal">
        <a href="javascript:void(0)" class="_close close-custom-modal"></a>
        <div class="custom-modal-content">

            <form id="vote-form">
                <div class="title">
                    <h4>Nhập số tim</h4>

                    <a href="javascript:void(0)" class="_close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24"><path fill="currentColor" d="M6.4 19L5 17.6l5.6-5.6L5 6.4L6.4 5l5.6 5.6L17.6 5L19 6.4L13.4 12l5.6 5.6l-1.4 1.4l-5.6-5.6Z"/></svg>
                    </a>

                </div>

                <div class="content-vote">
                    <label for="vote-num">
                        Số tim bình chọn
                    </label>
                    <input id="vote-num" type="number" min="1" value="" />
                </div>

                <div class="vote-footer">
                    <button class="_close">
                        Huỷ Bỏ
                    </button>

                    <button class="action-btn" type="submit">
                        Gửi Tim
                    </button>
                </div>
            </form>

        </div>
    </div>


    <!-- Top Modal -->
    <div id="rank-modal" class="custom-modal">
        <a href="javascript:void(0)" class="_close close-custom-modal"></a>
        <div class="custom-modal-content">
            <div class="title">
                <h4>Bảng Xếp Hạng</h4>
                <a href="javascript:void(0)" class="_close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24"><path fill="currentColor" d="M6.4 19L5 17.6l5.6-5.6L5 6.4L6.4 5l5.6 5.6L17.6 5L19 6.4L13.4 12l5.6 5.6l-1.4 1.4l-5.6-5.6Z"/></svg>
                </a>
            </div>

            <div class="rank-content"></div>

        </div>
    </div>


</div>
